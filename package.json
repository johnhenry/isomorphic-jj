{
  "name": "isomorphic-jj",
  "version": "1.0.0",
  "description": "A pure-JavaScript library that brings Jujutsu (jj) version control semantics to Node.js and browsers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./src/types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./src/types.d.ts"
    },
    "./browser": {
      "import": "./src/browser/index.js",
      "types": "./src/browser/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:browser": "playwright test",
    "build": "rollup -c",
    "lint": "eslint src tests",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js' 'tests/**/*.js'",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "version-control",
    "jujutsu",
    "jj",
    "git",
    "isomorphic",
    "browser",
    "nodejs",
    "change-tracking",
    "undo",
    "revsets"
  ],
  "author": "John Henry",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnhenry/isomorphic-jj.git"
  },
  "bugs": {
    "url": "https://github.com/johnhenry/isomorphic-jj/issues"
  },
  "homepage": "https://github.com/johnhenry/isomorphic-jj#readme",
  "peerDependencies": {
    "isomorphic-git": "^1.24.0"
  },
  "peerDependenciesMeta": {
    "isomorphic-git": {
      "optional": true
    }
  },
  "devDependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.0",
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "isomorphic-git": "^1.34.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.8.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "protobufjs": "^7.5.4"
  }
}
